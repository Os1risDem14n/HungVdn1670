@model IEnumerable<HungVdn1670.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>List Course</h2>

<hr />
@using (Html.BeginForm("Index", "Courses", FormMethod.Get))
{
    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
        <div class="input-group">
            @Html.TextBox("searchString", null, new { @class = "form-control bg-light border-0 small", placeholder = "Search by Course name ...", required = "required" })
            <div class="input-group-append">
                <button class="btn btn-primary" type="button">
                    <i class="fas fa-search fa-sm"></i>
                </button>
            </div>
        </div>
    </form>
}

<hr />

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Course</th>
            <th scope="col">Action</th>
            <th scope="col">Trainer</th>
            <th scope="col">Trainee</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.Name</td>
                <td>
                    @Html.ActionLink(
                        "Details",
                        "Details",
                        "Courses",
                        new { id = course.Id },
                        new { @class = "btn btn-primary" }
                        )
                    @Html.ActionLink(
                        "Edit",
                        "Edit",
                        "Courses",
                        new { id = course.Id },
                        new { @class = "btn btn-info" }
                        )
                    @Html.ActionLink(
                       "Delete",
                       "Delete",
                       "Courses",
                       new { id = course.Id },
                       new { @class = "btn btn-danger" }
                       )
                </td>
                <td>
                    @Html.ActionLink(
                        "Show",
                        "ShowTrainers",
                        "Courses",
                        new { id = course.Id },
                        new { @class = "btn btn-success" }
                        )
                    @Html.ActionLink(
                        "Add",
                        "AddTrainers",
                        "Courses",
                        new { id = course.Id },
                        new { @class = "btn btn-primary" }
                        )
                </td>
                <td>
                    @Html.ActionLink(
                        "See",
                        "ShowTrainees",
                        "Courses",
                        new { id = course.Id },
                        new { @class = "btn btn-success" }
                        )
                    @Html.ActionLink(
                       "Add",
                       "AddTrainees",
                       "Courses",
                       new { id = course.Id },
                       new { @class = "btn btn-primary" }
                       )
                </td>
            </tr>
        }

    </tbody>
</table>