@model HungVdn1670.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="p-5">
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
    </div>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "user", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                @Html.TextBoxFor(m => m.Age, new { @class = "form-control form-control-user", placeholder = "Age" })
            </div>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control form-control-user", placeholder = "Full Name" })
            </div>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-user", placeholder = "Email Address" })
        </div>
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-user", placeholder = "Password" })
            </div>
            <div class="col-sm-6">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-user", placeholder = "Repeat Password" })
            </div>
        </div>

        <button type="submit" class="btn btn-primary btn-user btn-block">Register</button>
        <hr />

        <button class="btn btn-google btn-user btn-block"
                title="Log in using your Google account">
            <i class="fab fa-google fa-fw"></i>
            Register using your Google account
        </button>

        <button class="btn btn-facebook btn-user btn-block"
                title="Log in using your Facebook account">
            <i class="fab fa-facebook-f fa-fw"></i>
            Register using your Facebook account
        </button>

        <hr />

        <div class="text-center">
            @Html.ActionLink("Already have an account? Login!", "Login")
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
