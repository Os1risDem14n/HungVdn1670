@model IEnumerable<HungVdn1670.Models.ApplicationUser>

@{
    ViewBag.Title = "ShowTrainees";
}

@using (Html.BeginForm("ShowTrainees", "Trainees", FormMethod.Get))
    {
<div class="form-group">
    @Html.TextBox("searchString", null, new { placeholder = "Search by Trainee name ...", required = "required" })
    <button type="submit"><i class="fa fa-search"></i></button>
</div>
    }
<div class="row">

    <div class="col-md-4">
        <h2>Show Trainees</h2>
        <ul>
            <li class="list-group-item active">
                All Trainees
            </li>
            @foreach (var user in Model)
            {
                <li class="list-group-item">@user.UserName</li>
                @Html.ActionLink(
                             "Detail",
                             "Details",
                             "Trainees",
                             new { id = user.Id },
                             new { @class = "btn btn-warning" }
                            )
                @Html.ActionLink(
                            "Edit",
                            "Edit",
                            "Trainees",
                            new { id = user.Id },
                            new { @class = "btn btn-primary" }
                           )
                @Html.ActionLink(
                            "Delete",
                            "Delete",
                            "Trainees",
                            new { id = user.Id },
                            new { @class = "btn btn-danger" }
                           )
            }
        </ul>
    </div>
</div>