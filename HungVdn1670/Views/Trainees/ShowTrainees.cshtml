@model IEnumerable<HungVdn1670.Models.ApplicationUser>

@{
    ViewBag.Title = "ShowTrainees";
}
<hr />
@using (Html.BeginForm("ShowTrainees", "Trainees", FormMethod.Get))
{
    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
        <div class="input-group">
            @Html.TextBox("searchString", null, new { @class = "form-control bg-light border-0 small", placeholder = "Search by Trainee name ...", required = "required" })
            <div class="input-group-append">
                <button class="btn btn-primary" type="button">
                    <i class="fas fa-search fa-sm"></i>
                </button>
            </div>
        </div>
    </form>
}
<hr />
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">User Name</th>

            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>

                <td>
                    @Html.ActionLink(
                        "Detail",
                        "Details",
                        "Trainees",
                        new { id = user.Id },
                        new { @class = "btn btn-primary" }
                       )
                    @Html.ActionLink(
                                "Edit",
                                "Edit",
                                "Trainees",
                                new { id = user.Id },
                                new { @class = "btn btn-info" }
                               )
                    @Html.ActionLink(
                                "Delete",
                                "Delete",
                                "Trainees",
                                new { id = user.Id },
                                new { @class = "btn btn-danger" }
                               )
                </td>

            </tr>
        }

    </tbody>
</table>